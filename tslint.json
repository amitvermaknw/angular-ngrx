{
    "linterOptions": {
        "typeCheck": true
    },
    "extends": "tslint-eslint-rules",
    "rules": {
        "array-bracket-spacing": [true, "never"],
        "arrow-parens": [true],
        "brace-style": [
            true,
            "1tbs"
        ],
        "class-name": [true],
        "comment-format": [true, "check-space"],
        "curly": [true],
        "eofline": [true],
        "indent": [
            true,
            "spaces",
            4
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "cx-member-ordering": [
            true,
            {
                "alphabetize": true,
                "order": [
                    "private-decorated-field",
                    "protected-decorated-field",
                    "public-decorated-field",
                    "private-abstract-field",
                    "private-readonly-field",
                    "private-static-field",
                    "private-instance-field",
                    "protected-abstract-field",
                    "protected-readonly-field",
                    "protected-static-field",
                    "protected-instance-field",
                    "public-abstract-field",
                    "public-readonly-field",
                    "public-static-field",
                    "public-instance-field",
                    "public-decorated-getter",
                    "private-decorated-getter",
                    "private-decorated-setter",
                    "private-decorated-method",
                    "protected-decorated-getter",
                    "protected-decorated-setter",
                    "protected-decorated-method",
                    "public-decorated-setter",
                    "public-decorated-method",
                    "public-abstract-getter",
                    "public-abstract-setter",
                    "public-abstract-method",
                    "public-instance-getter",
                    "private-abstract-getter",
                    "private-abstract-setter",
                    "private-abstract-method",
                    "private-instance-getter",
                    "private-instance-setter",
                    "private-static-method",
                    "private-static-getter",
                    "private-static-setter",
                    "private-instance-method",
                    "protected-abstract-getter",
                    "protected-abstract-setter",
                    "protected-abstract-method",
                    "protected-instance-getter",
                    "protected-instance-setter",
                    "protected-static-method",
                    "protected-static-getter",
                    "protected-static-setter",
                    "protected-instance-method",
                    "public-instance-setter",
                    "public-static-method",
                    "public-static-getter",
                    "public-static-setter",
                    "constructor",
                    "ng-instance-method",
                    "public-instance-method"
                ]
            }
        ],
        "new-parens": [true],
        "no-consecutive-blank-lines": [true],
        "no-console": [false],
        "no-duplicate-variable": [true],
        "no-empty": [
            true,
            "allowEmptyCatch"
        ],
        "no-eval": [true],
        "no-internal-module": [true],
        "no-trailing-whitespace": [true],
        "no-unsafe-finally": [true],
        "no-var-keyword": [true],
        "object-curly-spacing": [
            true,
            "always"
        ],
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-shorthand": [true],
        "object-literal-sort-keys": [true, "ignore-case"],
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
        "only-arrow-functions": [true],
        "prefer-const": [true],
        "quotemark": [
            true,
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semicolon": [
            true,
            "always"
        ],
        "space-before-function-paren": [true, "always"],
        "space-within-parens": [false],
        "ter-arrow-body-style": [true, "always"],
        "ter-arrow-spacing": [true],
        "ter-computed-property-spacing": [true],
        "ter-func-call-spacing": [true],
        "ter-indent": [
            true,
            4,
            {
                "FunctionDeclaration": {
                    "body": 1
                },
                "FunctionExpression": {
                    "body": 1
                },
                "MemberExpression": 0,
                "SwitchCase": 1
            }
        ],
        "ter-max-len": [
            true,
            {
                "code": 120,
                "ignoreRegExpLiterals": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "ter-padded-blocks": [true, "always"],
        "ter-prefer-arrow-callback": [true],
        "trailing-comma": [true, {
            "esSpecCompliant": true,
            "multiline": "never",
            "singleline": "never"
        }],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [true, "ban-keywords", "check-format"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    },
    "rulesDirectory": [
        "node_modules/@crexi-dev/lint"
    ]
  }
